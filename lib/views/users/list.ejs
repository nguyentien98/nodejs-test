<%- contentFor('content') %>
    <table class="table">
        <thead>
            <tr>
                <th>Full name</th>
                <th>Email</th>
                <th>
                    <a href="/users/add" class="btn btn-success">Add</a>
                </th>
            </tr>
        </thead>
        <tbody>
            <% for(let user of users) { %>
            <tr>
                <td><%=user.fullName %></td>
                <td><%=user.email %></td>
                <td>
                    <form action="/users/<%=user.id %>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>

<%- contentFor('title') %>
List User